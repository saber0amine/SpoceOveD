pipeline {
        agent any
               stages {
                stage('build') {
                        steps{
                        sh '''
                        ls
                        pwd
                        mvn clean install
                        '''
                        }
                }
                stage('test') {
                        steps{
                            sh 'mvn test'
                        }
                }

               stage('deploy') {
                        steps{
                        echo 'deploying the application'
                        }
                }

               }


}