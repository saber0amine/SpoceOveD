pipeline {
    agent any

    parameters {
        string(name: 'REPO_URL', defaultValue: 'https://github.com/saber0amine/SpoceOveD.git', description: 'Git repository URL')
        string(name: 'BRANCH', defaultValue: 'main', description: 'Git branch to build')
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git branch: params.BRANCH, url: params.REPO_URL
            }
        }

        stage('Run SAST Scanner') {
            steps {
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    sh '''
                    mvn clean verify sonar:sonar \
                    -Dsonar.projectKey=project-ama \
                    -Dsonar.organization=amasoft \
                    -Dsonar.host.url=https://sonarcloud.io \
                    -Dsonar.token=$SONAR_TOKEN
                    '''
                }
            }
        }

 stage('Run SCA Analysis using Snyk') {
            steps {
                sh '''
                ls -la
                chmod +x mvnw
                ls -la
                CURRENT_DIR=$(pwd)
                echo $CURRENT_DIR
                '''
                script {
                    def currentDir = sh(script: 'pwd', returnStdout: true).trim()
                    dir(currentDir) {
                        sh '''
                        snyk test --json --severity-threshold=low
                        '''
                    }
                }
            }
        }

//         stage('Build') {
//             steps {
//                 sh 'mvn clean install -e'
//             }
//         }
//
//         stage('Test') {
//             steps {
//                 sh 'mvn test'
//             }
//         }
//
//         stage('Deploy') {
//             steps {
//                 echo 'Deploying the application'
//             }
//         }
   }

    post {

        failure {
            sh '''
          echo "Recent Docker container logs:"
            docker logs $(docker ps -aq | head -n 1)
            '''
        }
    }
}